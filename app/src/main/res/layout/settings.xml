<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="20"
    android:layout_rowWeight="60"
    android:orientation="vertical"
    android:alignmentMode="alignBounds">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select time slot for notification"
        android:id="@+id/titre"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Begining"
        android:id="@+id/textViewstart"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="End"
        android:id="@+id/textViewend"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/checkBox1"
        android:layout_row="2"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker1"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker1"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thuesday"
        android:id="@+id/checkBox2"
        android:layout_row="3"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker2"
        android:layout_gravity="center_vertical"
        android:layout_row="3"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker2"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/checkBox3"
        android:layout_row="4"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker3"
        android:layout_gravity="center_vertical"
        android:layout_row="4"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker3"
        android:layout_gravity="center_horizontal"
        android:layout_row="4"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/checkBox4"
        android:layout_row="5"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker4"
        android:layout_gravity="center_vertical"
        android:layout_row="5"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker4"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/checkBox5"
        android:layout_row="6"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker5"
        android:layout_gravity="center_vertical"
        android:layout_row="6"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker5"
        android:layout_gravity="center_horizontal"
        android:layout_row="6"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/checkBox6"
        android:layout_row="7"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker6"
        android:layout_gravity="center_vertical"
        android:layout_row="7"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker6"
        android:layout_gravity="center_horizontal"
        android:layout_row="7"
        android:layout_column="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/checkBox7"
        android:layout_row="8"
        android:layout_column="0" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/startpicker7"
        android:layout_gravity="center_vertical"
        android:layout_row="8"
        android:layout_column="1" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/endPicker7"
        android:layout_gravity="center_horizontal"
        android:layout_row="8"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView"
        android:layout_row="11"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mail to notify"
        android:id="@+id/textView"
        android:layout_row="12"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:textSize="12dp"
        android:id="@+id/mail"
        android:layout_row="13"
        android:layout_column="0" />

    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="ok"
        android:id="@+id/save"
        android:layout_row="19"
        android:layout_column="2" />

</GridLayout>